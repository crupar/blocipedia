<h1><%= @wiki.title.capitalize %></h1>

<div class="row">
  <div class="col-md-8">
    <p><%= @wiki.body %></p>
  </div>

  <div class="col-md-4">
  </div>

  <div class="col-md-8">
    <small>
      Wiki created <%= time_ago_in_words(@wiki.created_at)%> ago. <br>
      Last updated on <%= @wiki.updated_at%>. <br>
    </small>
    <%= link_to "Edit", edit_wiki_path(@wiki), class: 'btn btn-xs btn-success' %>
    <%= link_to "Delete Wiki", @wiki, method: :delete, class: 'btn btn-xs btn-danger', data: { confirm: 'Are you sure you want to delete this wiki?' } %>
    <%= render partial: 'public_private_button' %>

  </div>
</div>
