<html>

<body>
<h1>Wiki Entries</h1>

<div class="row">
  <div class="col-md-8">
    <% @wikis.each do |wiki| %>
      <div class="media">
        <div class="media-body">

          <h4 class="media-heading">
            <%= link_to wiki.title.capitalize, wiki %>
          </h4>


        </div>
      </div>
      <% end %>
    </div>

      <div class="col-md-4">
      <%= link_to "Create A New Wiki", new_wiki_path, class: 'btn btn-lg btn-success center-block' %>
      </div>
</body>
